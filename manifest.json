{
  "manifest_version": 3,
  "name": "Browser Sticky Notes",
  "version": "1.1",
  "description": "Opens a Text Panel when clicked.",
  "action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "permissions": [
    "storage"
  ],

  "background": {
    "service_worker": "background.js"
  },
  "commands": {
    "open_popup": {
      "suggested_key": {
        "default": "Alt+N"
      },
      "description": "Opens the popup"
    }
  },
    "host_permissions":["<all_urls>"]
}
